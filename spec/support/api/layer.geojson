{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["type", "features"],
  "properties": {
    "type": {
      "type": "string",
      "default": "FeatureCollection"
    },
    "id": {
      "type": "integer"
    },
    "title": {
      "type": "string"
    },
    "text": {
      "type": "text"
    },
    "features": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "geometry": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "coordinates": {
                  "type": "array",
                  "items": [
                    {
                      "type": "number"
                    },
                    {
                      "type": "number"
                    }
                  ]
                }
              },
              "required": ["type", "coordinates"]
            },
            "properties": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "subtitle": {
                  "type": "string"
                },
                "location": {
                  "type": "string"
                },
                "address": {
                  "type": "string"
                },
                "zip": {
                  "type": "string"
                },
                "city": {
                  "type": "string"
                },
                "country": {
                  "type": "string"
                },
                "teaser": {
                  "type": "string"
                },
                "text": {
                  "type": "text"
                },
                "link": {
                  "type": "string"
                },
                "address": {
                  "type": "text"
                },
                "city": {
                  "type": "text"
                },
                "country": {
                  "type": "text"
                },
                "images": {
                  "type": "array",
                  "items": [
                    {
                      "id": "integer"
                    },
                    {
                      "title": "string"
                    },
                    {
                      "source": "string"
                    },
                    {
                      "creator": "string"
                    },
                    {
                      "alt": "string"
                    },
                    {
                      "sorting": "string"
                    },
                    {
                      "image_linktag": "string"
                    },
                    {
                      "image_url": "string"
                    }
                  ]
                }
              },
              "required": ["name", "teaser", "text", "link"]
            }
          },
          "required": ["type", "geometry", "properties"]
        }
      ]
    }
  }
}
