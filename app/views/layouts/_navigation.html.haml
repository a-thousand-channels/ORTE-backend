.top-bar
  .top-bar-left
    %ul.menu
      %li.name= link_to "#{Settings.app_name}", root_path
  - if user_signed_in?
    .top-bar-right
      %ul.menu
        - if admin?
          %li
            %a{:href => admin_users_path}
              %i.fi-torso
              Users
        %li
          %a{:href => edit_user_registration_path}
            %i.fi-torso
            Profile
        %li
          = link_to destroy_user_session_path, method: :delete, :id => 'logout' do
            %i.fi-power
            = t(".sign_out")
