#form-wrapper.large-wrapper
  %p.text-right.close_link_wrapper
    =link_to admin_groups_path, :class=>'close_link' do
      %i.fi.fi-x
  %p.small
    %a{:href => settings_path, :title => 'Settings'}
      %i.fi-widget.fi-21
      Settings
    \&mdash;
    %a{:href => admin_pages_path, :title => 'Pages'}
      %i.fi-marker.fi-21
      Pages

  %p#notice= notice

  %h1
    = @page.title
    - if @page.is_published
      %i.fi-eye.fi-24{title: 'Page is published'}
    - else
      %i.fi-x.fi-24{title: 'Page is hidden'}
    - if @page.in_menu
      %i.fi-check.fi-24{title: 'Page is in Menu'}


  - if @page.teasertext
    %p.teasertext
      = @page.teasertext.html_safe
  - if @page.fulltext
    %p.fulltext
      = @page.fulltext.html_safe
  - if @page.footertext
    %p.footertext
      = @page.footertext.html_safe
  %hr
  = link_to edit_admin_page_path(@page), class: "button"  do
    %i.fi.fi-pencil
    Edit page
  &nbsp;
  = link_to admin_page_path(@page), method: :delete, data: { confirm: 'Are you sure to delete this image?' }, :class => 'button warning' do
    %i.fi.fi-trash
    Delete

