
#table-wrapper
  = link_to map_layer_url(@map,@layer), :class=>"close-button button small", "aria-label"=>"Close back",:type=>"button" do
    %span{"aria-hidden"=>"true"}
      %i.fi.fi-x
  %h3
    = link_to map_path(@layer.map) do
      = @layer.map.title
    \>
    = link_to map_layer_path(@layer.map,@layer) do
      = @layer.title
    (#{@places.count})


  %table
    %thead
      %tr
        %th Date
        %th Place
        %th Address
        %th
          %i.fi-eye.fi-24
        %th

    %tbody
      - @places.order(:startdate).each do |place|
        %tr
          %td
            = smart_date_display(place.startdate, place.enddate)
          %td
            %h4
              = link_to map_layer_place_path(place.layer.map,place.layer,place) do
                = place.title
            %p
              = link_to place.link do
                = place.link
          %td
            %p
              = place.location
              %br
              = place.address
              %br
              = place.zip
              = place.city
            %p.hint.text-left
              - if place.lat
                #{place.lat[0..6]}/#{place.lon[0..5]}
          %td
            - if place.published
              %i.fi-check.fi-24
            - else
              %i.fi-lock.fi-24
          %td
            = link_to 'Edit', edit_map_layer_place_path(place.layer.map,place.layer,place), :class => "button"
            %br
            = link_to 'Destroy',  map_layer_place_path(place.layer.map,place.layer,place), method: :delete, data: { confirm: 'Are you sure?' }, :class => "button warning"
