= simple_form_for(@place) do |f|
  .grid-x
    .large-12.cell
      = f.error_notification
  .grid-x
    .large-3.cell
      &nbsp;
    .large-6.medium-12.cell
      .form-inputs
        = f.input :title
        = f.input :teaser
        = f.input :text
        = f.input :link
        = f.input :startdate
        = f.input :enddate
        = f.input :lat
        = f.input :lon
        = f.input :location
        = f.input :address
        = f.input :zip
        = f.input :city
        = f.input :country
        = f.input :published
        = f.association :layer
      .form-actions
        = f.button :submit, :class => "button"
    .large-3.cell
      &nbsp;